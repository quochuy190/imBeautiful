<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/btn_share"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/pading_icon"
            android:padding="@dimen/stoker_edt"
            android:src="@drawable/icon_up_face"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.1" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/pading_icon"
            android:gravity="center_vertical"
            android:text="Up facebook nội dung này"
            android:textColor="@color/blue_next_right"
            android:textSize="@dimen/txt_user"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="@+id/btn_share"
            app:layout_constraintStart_toEndOf="@+id/btn_share"
            app:layout_constraintTop_toTopOf="@+id/btn_share" />

        <TextView
            android:id="@+id/txt_des_up_face"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/pading_icon"
            android:padding="@dimen/pading_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_share" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt_des_up_face">

            <ImageView
                android:layout_margin="@dimen/dp1"
                android:background="@color/black"
                android:visibility="gone"
                android:id="@+id/img_facebook_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/img_facebook_2"
                app:layout_constraintEnd_toStartOf="@id/img_facebook_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_margin="@dimen/dp1"
                android:background="@color/black"
                android:visibility="gone"
                android:id="@+id/img_facebook_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/img_facebook_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/img_facebook_1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_margin="@dimen/dp1"
                android:background="@color/black"
                android:visibility="gone"
                android:id="@+id/img_facebook_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_facebook_4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/img_facebook_1" />

            <ImageView
                android:layout_margin="@dimen/dp1"
                android:background="@color/black"
                android:visibility="gone"
                android:id="@+id/img_facebook_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/img_facebook_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/img_facebook_5"

                app:layout_constraintStart_toEndOf="@+id/img_facebook_2" />

            <ImageView
                android:layout_margin="@dimen/dp1"
                android:background="@color/black"
                android:visibility="gone"
                android:id="@+id/img_facebook_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toEndOf="@+id/img_facebook_4"
                app:layout_constraintTop_toBottomOf="@id/img_facebook_1" />

        </android.support.constraint.ConstraintLayout>



    </android.support.constraint.ConstraintLayout>


</android.support.v4.widget.NestedScrollView>