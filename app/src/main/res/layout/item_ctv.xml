<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/green_stroke"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_sst_ctv_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="0.5"
        android:background="@color/green_title_table"
        android:gravity="center"
        android:paddingLeft="@dimen/dp1"
        android:paddingRight="@dimen/dp1"
        android:paddingTop="@dimen/dp7"
        android:paddingBottom="@dimen/dp7"
        android:singleLine="true"
        android:text="STT"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_13sp" />

    <TextView
        android:id="@+id/txt_fullname_ctv_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="1.6"
        android:background="@color/green_title_table"
        android:gravity="left"
        android:paddingLeft="@dimen/dp1"
        android:paddingRight="@dimen/dp1"
        android:paddingTop="@dimen/dp7"
        android:paddingBottom="@dimen/dp7"
        android:singleLine="true"
        android:text="Họ và tên"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_13sp" />

    <TextView
        android:id="@+id/txt_user_ctv_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="1"
        android:background="@color/green_title_table"
        android:gravity="center"
        android:paddingLeft="@dimen/dp1"
        android:paddingRight="@dimen/dp1"
        android:paddingTop="@dimen/dp7"
        android:paddingBottom="@dimen/dp7"
        android:singleLine="true"
        android:text="Mã user"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_13sp" />

    <TextView
        android:id="@+id/txt_phone_ctv_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="1.2"
        android:background="@color/green_holde_1_table"
        android:gravity="center"
        android:paddingLeft="@dimen/dp1"
        android:paddingRight="@dimen/dp1"
        android:paddingTop="@dimen/dp7"
        android:paddingBottom="@dimen/dp7"
        android:singleLine="true"
        android:text="SĐT"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_13sp" />

    <TextView
        android:id="@+id/txt_balance_ctv_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.5dp"
        android:layout_weight="1.1"
        android:background="@color/green_title_table"
        android:gravity="right"
        android:paddingLeft="@dimen/dp1"
        android:paddingRight="@dimen/dp1"
        android:paddingTop="@dimen/dp7"
        android:paddingBottom="@dimen/dp7"
        android:singleLine="true"
        android:text="TK"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_13sp" />

</LinearLayout>